{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "An interactive scatter plot of global health statistics by Region and year.",
  "data": {"url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/data/merged_data_scatter.csv",
  "format":{"type":"csv",  "parse": {
    "Electricity from fossil fuels (TWh)": "number", "Value_co2_emissions_kt_by_country": "number"
   }}},
  "hconcat": [{
    "width": 500,
    "height":400,
  "layer": [
    {
      "transform": [
        {"filter": {"field": "Entity", "equal": "Afghanistan"}},
        {"filter":{"field": "Year", "equal": {"param": "YearSelector.Year"}}}
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 250,
        "y": 200,
        "opacity": 0.1
      },
      "encoding": {"text": {"field": "Year","type": "nominal"}}
    },
    {
      "title":{"text":"Emission CO2 Against energy generated by ff Trend for Each Continent Across Years"},
     
      
      "encoding": {
        "x": {
          "field": "Electricity from fossil fuels (TWh)",
          "type": "quantitative",
          "scale": {"domain": [0, 500]},
          "axis": {"tickCount": 50, "title": "Electricity from fossil fuels (TWh)"}
        },
        "y": {
          "field": "Value_co2_emissions_kt_by_country",
          "type": "quantitative",
          "scale": {"domain": [0, 10000000]},
          "axis": {"tickCount": 1000000, "title": "Value_co2_emissions_kt_by_country"}
        }
        
      },
      
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round"
          },
          "encoding": {
            "detail": {"field": "Entity"},
            "order": {"field": "Year","type": "nominal"},
            "opacity": {
              "condition": {
                "test": {"or": [
                  {"param": "hovered", "empty": false},
                  {"param": "clicked", "empty": false}
                ]},
                "value": 0.8
              },
              "value": 0
            }
          }
        },


        {
          "params": [
            {
              "name": "YearSelector",
              "select":{
                "type": "single",
                "fields": ["Year"]

              },
              "bind": {
                 "input": "range",
                 "min": 2000,
                 "max": 2020,
                 "step": 1,
                 "name": "Year"
              }
           },
           
            {
              "name": "hovered",
              "select": {
                "type": "point",
                "fields": ["Entity"],
                "toggle": false,
                "on": "mouseover"
              }
            },
            {
              "name": "clicked",
              "select": {"type": "point", "fields": ["Entity"]}
            }],
          "transform": [{"filter": {"field": "Year", "equal": {"param": "YearSelector.Year"}}}],
          
          "mark": {"type": "circle", "size": 125, "opacity": 0.7},
          
          "encoding": {"color": {"field": "region", "title": "Continent", "legend":{"titleFont":"Roboto", "titleFontSize":15, "labelFont":"Roboto", "labelFontSize":12}, "scale":{"range":["#FFB000", "#FE6100", "#DC267F", "#785EF0", "#648FFF"]}},
        "tooltip":[{"field":"Year", "title":"Year"},{"field":"region", "title":"Continent"},{"field":"Value_co2_emissions_kt_by_country", "title":"Value_co2_emissions_kt_by_country"},{"field":"Electricity from fossil fuels (TWh)", "title":"Electricity from fossil fuels (TWh)"}]}
        },
        {
          "transform": [
            
            {
              "filter": {
                "and": [
                  {"field": "Year", "equal": {"param": "YearSelector.Year"}},
                  {"or": [
                    {"param": "clicked", "empty": false},
                    {"param": "hovered", "empty": false}
                  ]}
                ]
              }
            }
          ],
          "params": [{
            "name": "zoom",
            "select": "interval",
            "bind": "scales"
          }],
          "mark": {
            "type": "text",
            "yOffset": -12,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "text": {"field": "Entity"},
            "color": {"field": "region", "title": "Continent"}
          }
        },
        {
          "transform": [
            {"filter": {"param": "hovered", "empty": false}},
            {"filter": {"not": {{"field": "Year", "equal": {"param": "YearSelector.Year"}}}}}
          ],
          "layer": [
            {
              "mark": {
                "type": "text",
                "yOffset": -12,
                "fontSize": 12,
                "color": "gray"
              },
              "encoding": {"text": {"field": "Year","type": "nominal"}}
            },
            {"mark": {"type": "circle", "color": "gray"}}
          ]
        }
      ]
    }
  ]}]}