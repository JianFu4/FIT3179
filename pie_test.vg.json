{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A radar chart example, showing multiple dimensions in a radial layout.",
    "width": 400,
    "height": 400,
    "left":90,
    "padding-bottom":20,
    "autosize": {"type": "none", "contains": "padding"},
    "title":{"text":"Overview of Region 1"},
    "signals": [
      {"name": "radius", "update": "width / 2"},
        {"name": "reg_select",
        "value":"Asia",
        "bind": {
          "input": "select",
          "options": ["Asia","Europe","Africa","Americas","Oceania"],
          "labels": ["Asia","Europe","Africa","Americas","Oceania"],
          "name": "Region: "
        }
        
    }
    ],
    "data": [
      {
        "name": "table",
        "url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/data/merged_dataset.csv",
        "format":{"type":"csv", "delimiter":","},
        "transform": [
            { "type": "filter", "expr": "reg_select == null || datum.region == reg_select" }
          ]
      },
      {
        "name": "keys",
        "source": "table",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["key"]
          }
        ]
      }
    ],
    "scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "padding": 0.5,
        "domain": {"data": "table", "field": "key"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "zero": true,
        "nice": false,
        "domain": {"data": "table", "field": "value"},
        "domainMin": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "table", "field": "region"},
        "range":{"scheme":"darkblue"}
      }
    ],
  
    "encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    },
  
    "marks": [
      {
        "type": "group",
        "name": "categories",
        "zindex": 1,
        "from": {
          "facet": {"data": "table", "name": "facet", "groupby": ["region"]}
        },
        "marks": [
          {
            "type": "line",
            "name": "category-line",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "tooltip":{"signal": "{'Region': datum.region,'Key': datum.key, 'Value': datum.value }"},
                "interpolate": {"value": "linear-closed"},
                "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
                "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
                "stroke": {"scale": "color", "field": "region"},
                "strokeWidth": {"value": 1},
                "fill": {"scale": "color", "field": "region"},
                "fillOpacity": {"value": 0.1}
              }
            }
          }
        ]
      },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "keys"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      
      {
        "type": "line",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "name": "key-label",
        "from": {"data": "keys"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius-1) * cos(scale('angular', datum.key))"},
            "y": {"signal": "(radius-1) * sin(scale('angular', datum.key))"},
            "text": {"field": "key"},
            "align": [
              {
                "test": "abs(scale('angular', datum.key)) > PI / 2",
                "value": "left",
                "padding":20
              },
              {
                "value": "center"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.key) > 0", "value": "bottom"
              },
              {
                "test": "scale('angular', datum.key) == 0", "value": "top"
              },
              {
                "value": "top"
              }
            ],
            "fill": {"value": "black"},
            "fontWeight":{"value": "bold"},
            "fontSize":{"value": 12},
            "font":{"value": "Roboto"},
            "dx":{"value": -20}
          }
        }
      }
    ],
    "opacity": { "value": 0.6},
    "config": {"text":{"font": "Roboto"}}
  }