{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/data/merged_dataset.csv"},
  "hconcat": [
    {
      "mark": "point",
      
      
      "selection": {
        "clicked": {
          "type": "single",
          "nearest": true,
          "on": "click",
          "encodings": ["x", "y"],
          "empty": "none",
          "fields": ["Entity"]
        }
      },
      





      "encoding": {
        "x": {"field": "Electricity from fossil fuels (TWh)", "type": "quantitative"},
        "y": {"field": "Value_co2_emissions_kt_by_country", "type": "quantitative"},
        "color": {"field": "Entity", "type": "nominal"},
        "tooltip": [
          {"field": "Entity", "type": "nominal"},
          {"field": "Electricity from fossil fuels (TWh)", "type": "quantitative"},
          {"field": "Value_co2_emissions_kt_by_country", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": "point",
      "transform": [{
        "filter": {"selection": "clicked"}
      }],
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Value_co2_emissions_kt_by_country", "type": "quantitative"},
        "color": {"field": "Entity", "type": "nominal"}
      }
    }
  ] 
}


    
  
