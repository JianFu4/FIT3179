{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "data": {
    "url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/data/merged_data_scatter.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "hconcat": [
    {
      "width": 400,
      "height": 400,
      "layer": [
        {
          "mark": "text",
          "transform": [
            {"filter": "datum.Region == 'China' || datum.Region == 'United States'"},
            {"filter": "datum.year == Year_selection"}
          ],
          "encoding": {
            "x": {
              "field": "Electricity from fossil fuels (TWh)",
              "type": "quantitative"
            },
            "y": {
              "field": "Value_co2_emissions_kt_by_country",
              "type": "quantitative"
            },
            "text": {"field": "Region", "type": "nominal"},
            "offsetY": {"value": -15} 
          }
        },
        {
          "mark": {
            "type": "point",
            "filled" : true
          },
          "selection": {
            "selectedPoint": {
              "type": "single",
              "on": "click",
              "fields": ["Region"],
              "empty": "none"
            }
          },
          "transform": [
            {"filter": "datum.year == Year_selection"}
          ],
          "encoding": {
            "x": {
              "field": "Electricity from fossil fuels (TWh)",
              "type": "quantitative",
              "axis": {"title": "Electricity from fossil fuels (TWh)", "titleFont":"Roboto", "labelFont":"Roboto"}
            },
            "y": {
              "field": "Value_co2_emissions_kt_by_country",
              "type": "quantitative",
              "axis": {"title": "CO2 emissions", "titleFont":"Roboto", "labelFont":"Roboto"}
            },
            "color": {
              "field": "Continent",
              "type": "nominal",
              "legend": {
                "orient" : "left",
                "offset" : 20
              }
            },
            "tooltip": [
              {"field": "Region", "type": "nominal"},
              {"field": "Electricity from fossil fuels (TWh)", "type": "quantitative"},
              {"field": "Value_co2_emissions_kt_by_country", "type": "quantitative"}
            ]
          }
        },
        {
          "mark": {
            "type": "line",
            "opacity": 0.3
          },
          "transform": [
            {
              "filter": {"selection": "selectedPoint"}
            }
          ],
          "encoding": {
            "x": {
              "field": "Electricity from fossil fuels (TWh)",
              "type": "quantitative",
              "axis": {"title": "Electricity from fossil fuels (TWh)", "titleFont":"Roboto", "labelFont":"Roboto"}
            },
            "y": {
              "field": "Value_co2_emissions_kt_by_country",
              "type": "quantitative",
              "axis": {"title": "CO2 emissions", "titleFont":"Roboto", "labelFont":"Roboto"}
            }
          }
        }
      ]
    },
    {
      "width": 400,
      "height": 400,
      "mark": "line",
      "transform": [
        {
          "filter": {"selection": "selectedPoint"}
        }
      ],
      "encoding": {
        "y": {
          "field": "Value_co2_emissions_kt_by_country",
          "type": "quantitative",
          "axis": {"title": "CO2 emissions", "titleFont":"Roboto", "labelFont":"Roboto"}
        },
        "x": {
          "field": "year",
          "type": "nominal",
          "axis": {"title": "Year", "titleFont":"Roboto", "labelFont":"Roboto"}
        }
      }
    }
  ]
}