{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": {
    "row": ["gdp_per_capita", "Value_co2_emissions_kt_by_country", "Access to electricity (% of population)", "Energy intensity level of primary energy (MJ/$2017 PPP GDP)", "Renewable energy share in the total final energy consumption (%)"],
    "column": ["Renewable energy share in the total final energy consumption (%)", "Energy intensity level of primary energy (MJ/$2017 PPP GDP)", "Access to electricity (% of population)", "Value_co2_emissions_kt_by_country", "gdp_per_capita"]
  },
  "spec": {
    "data": {
      "url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/merged_dataset.csv"
    },
    "mark": "point",
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "field": "Year",
        "type": "ordinal",
        "scale": {
          "domain": [2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020]
        },
        "legend": {
          "title": "Year",
          "type": "symbol"
        }
      }
    },
    "selection": {
      "yearLegend": {
        "type": "multi",
        "fields": ["Year"],
        "bind": "legend"
      }
    }
  }
}

