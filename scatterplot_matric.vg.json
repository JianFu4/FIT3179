{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": {
      "row": ["gdp_per_capita", "Value_co2_emissions_kt_by_country", "Access to electricity (% of population)","Energy intensity level of primary energy (MJ/$2017 PPP GDP)","Renewable energy share in the total final energy consumption (%)"],
      "column": ["Renewable energy share in the total final energy consumption (%)", "Energy intensity level of primary energy (MJ/$2017 PPP GDP)", "Access to electricity (% of population)","Value_co2_emissions_kt_by_country","gdp_per_capita"]
    },
    "spec": {
      "data": {"url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/global-data-on-sustainable-energy%20(1).csv"},
      "mark": "point",
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "resolve": "union",
            "on": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
            "translate": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
            "zoom": "wheel![event.shiftKey]"
          }
        },
        {
          "name": "grid",
          "select": {
            "type": "interval",
            "resolve": "global",
            "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
            "zoom": "wheel![!event.shiftKey]"
          },
          "bind": "scales"
        }
      ],
      "encoding": {
        "x": {"field": {"repeat": "column"}, "type": "quantitative"},
        "y": {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "axis": {"minExtent": 30}
        },
        "color": {
          "condition": {
            "param": "brush",
            "field": "Origin",
            "type": "nominal"
          },
          "value": "grey"
        }
      }
    }
  }