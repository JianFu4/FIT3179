{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/data/merged_data_scatter.csv"
    },
    "transform": [
        {"filter": "datum.Region === 'Afghanistan'"}
    ],
    "width": 600,
    "height": 400,
    "layer": [
        {
            "mark": {
                "type": "text",
                "baseline": "middle",
                "align": "center",
                "dy": -10
            },
            "transform": [
                {"filter": "datum.year % 5 === 0"}
            ],
            "encoding": {
                "x": {"field": "year", "type": "nominal"},
                "y": {"field": "Value_co2_emissions_kt_by_country", "type": "quantitative", "axis": {"title": "CO2 Emissions (kt)"}},
                "text": {"field": "year", "type": "nominal"},
                "opacity": {"value": 0.3}
            }
        },
        {
            "mark": "line",
            "encoding": {
                "x": {"field": "year", "type": "nominal"},
                "y": {"field": "Value_co2_emissions_kt_by_country", "type": "quantitative"}
            }
        }
    ]
}
