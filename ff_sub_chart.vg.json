{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/JianFu4/FIT3179/main/global-data-on-sustainable-energy%20(1).csv"
    },
    "transform": [{
      "aggregate": [
        {"op": "sum", "field": "Electricity from fossil fuels (TWh)", "as": "Fossil Fuels"}
      ],
      "groupby": ["region"]
    }
],
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
      "theta": {"field": "Fossil Fuels", "type": "quantitative"},
      "color": {"field": "Entity", "type": "nominal"}
    }
  }
  